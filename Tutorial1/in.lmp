############## Simulator condition ##############
units           real
atom_style      full
boundary        p p p


############## Initial condition ##############
read_data	    data.lmp
#read_restart    restart.2000000

group           water type 1 2
group           oxygen type 1


############## Force field ##############
pair_style      lj/cut/coul/long 11.0 11.0

pair_coeff      1 1 0.15535 3.166 # LJ, epsilon and sigma
pair_coeff      2 2 0.00 0.00     # LJ, epsilon and sigma


pair_modify     mix arithmetic # mixing rule for undefined interactions

kspace_style    pppm 1.0e-4 # longrange interaction calculation : pppm (high accuracy, moderate cost)

bond_style      harmonic
bond_coeff      1 1000.00 1.000 # harmonic approximated spring force

angle_style     harmonic
angle_coeff     1 100.0 109.47 # harmonic approximated angular spring force

special_bonds   lj/coul 0.0 0.0 0.5 # 

fix             0 all shake 0.0001 20 0 b 1 a 1


############## Additional setting ##############
neighbor        2.0 bin # Skin thickness. MD engine computes cutoff radius for the atoms in the skin, and regularly updates the list of atoms in the skin.
timestep        1
neigh_modify    delay 10 every 1 check yes # rebuild the atom list regularly, but not until a certain time delay has passed. 


############## Temperature control ##############
velocity        all create 300.0 123456789 rot yes mom yes dist gaussian
fix             1 water nvt temp 300.00 300.00 100.0


############## Equilibration ##############
dump            1 all custom 1000 dump_EQ.xyz id element xu yu zu
dump_modify     1 sort id
dump_modify     1 element O H

thermo          1000
run             10000

undump          1

############## Production ##############
dump            2 all custom 100 dump_Prod.xyz id element xu yu zu vx vy vz fx fy fz
dump_modify     2 sort id
dump_modify     2 element O H

thermo          1000
run             100000
